!!! Strict
%html{ lang: "en" }
  %head
    %title= @squad.present? ? "#{@squad.name}" : "Squadd"
    = csrf_meta_tags
    = action_cable_meta_tag

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true

    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.2.3/backbone-min.js'

    = javascript_include_tag 'application', 'data-turbolinks-track' => true

  %body
    = yield
    = yield :javascript